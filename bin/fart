#!/usr/bin/env ruby

require File.dirname(__FILE__) + '/../lib/fart'

pwd = ARGV[0] || Dir.pwd

server = Fart::Server.new('0.0.0.0', 3000,
                          Fart::RailsHandler.new(pwd), # Let Rails handle his thing and ignore files
                          Fart::DirHandler.new(File.join(pwd, 'public')) # Serve static files
                         )
server.run